<%= form_with model: [@category, @expense] do |f| %>
  <article class='form--header'>
    <%= link_to category_expenses_path(@category) do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>

    <h2>Create A Transaction</h2>
    <div class="actions">
      <%= f.submit "Create Transaction" %>
    </div>
  </article>
  <% @expense.errors.each do |error| %>
    <p><%= error.full_message %></p>
  <% end %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name' %>
  </div>
  <div class="field">
    <%= f.number_field :amount, autofocus: true, autocomplete: "amount", placeholder: 'Amount' %>
  </div>
<% end %>