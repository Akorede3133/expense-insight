<%= form_with model: @category do |f| %>
  <article class='form--header'>
    <%= link_to categories_path do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h2>Create a category</h2>
    <div class="actions">
      <%= f.submit "Create Category" %>
    </div>
  </article>
  <% @category.errors.each do |error| %>
    <p><%= error.full_message %></p>
  <% end %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name' %>
  </div>
  <div class="field">
    <%= f.label :icon, 'Choose an icon' %><br>
    <%= f.file_field :icon, autofocus: true, autocomplete: "icon" %>
  </div>
<% end %>